{{ js('/js/common.js') }}
{% set f = simple_form(c('/admin/ge_tui_messages/update_support_province/', ge_tui_message_id), ['class': 'ajax_model_form','data-model':'ge_tui_message']) %}

<a class="batch_select" data-select_option="all" data-target="select_province">全选</a>
<a class="batch_select" data-select_option="reverse" data-target="select_province"> 反选</a>
<div class="form-group string optional">
    <div id="select_province">
        {% for k, province in provinces %}
            <input type="checkbox" name="province_ids[]"
                   value="{{ province.id }}" {% if in_array(province.id, support_province_ids) %} checked="true"{% endif %}/>
            {{ province.name }}{% if (k + 1) % 5 == 0 %}<br>{% endif %}
        {% endfor %}
    </div>
</div>

{{ f.submit('提交') }}

{{ f.end }}