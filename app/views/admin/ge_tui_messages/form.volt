{% set f = simple_form(['admin', ge_tui_message], ['class' : 'ajax_model_form']) %}
{{ f.select('product_channel_id', ['label':'产品渠道', 'collection':product_channels,'value_field':'id','text_field':'name','width':'50%']) }}
{{ f.input('name',['label':'名称', 'width':'50%']) }}
{{ f.select('status',['label':'是否有效','collection':GeTuiMessages.STATUS, 'width':'33%']) }}
{{ f.input('offline_day',['label':'离线天数(7-15)','width':'33%']) }}
{{ f.input('send_at',['label':'发送时间','class':'form_datetime','width':'33%']) }}
{{ f.submit('保存') }}
{{ f.end }}

<script type="text/javascript">
    $(function () {
        $(".form_datetime").datetimepicker({
            language: "zh-CN",
            format: 'yyyy-mm-dd hh:ii',
            autoclose: 1,
            todayBtn: 1,
            todayHighlight: 1,
            startView: 2,
        });
    });
</script>