{% set f = simple_form('/admin/operators/update_partners', ['class': 'ajax_model_form','data-model':'operator']) %}

<div class="form-group string optional">
    <label class="string optional control-label">选择渠道</label>
    <div>
        <input name="id" value="{{ operator.id }}" type="hidden"/>
        {% for partner in partners %}
            <input type="checkbox" name="partner_ids[]" value="{{ partner.id }}"{% if partner.id in partner_ids %} checked="checked" {% endif %}/>{{ partner.name }}<br>
        {% endfor %}
    </div>
</div>

{{ f.submit('提交') }}

{{ f.end }}