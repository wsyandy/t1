/*城市选择器*/
.citypicker {
  width: 100%;
  height: 500rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff
}

.cityheader {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  padding: 0 30rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #dfdfdf;
  border-bottom: 1px solid #eee;
  background-color: #f3f3f3;
  z-index: 999;
}

.city-cancel, .city-true {
  text-align: center;
  color: #999;
  font-size: 32rpx;
}

.city-true {
  color: #F45189;
}

.citybody {
  position: absolute;
  top: 100rpx;
  left: 0;
  width: 100%;
  height: 400rpx;
}

.citycurrent {
  height: 100rpx;
  line-height: 100rpx;
}

.citylist {
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
  font-size: 32rpx;
}

