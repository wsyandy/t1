/* pages/my_profile/my_profile.wxss */

page {
  background-color: #fff;
}

.profile_head {
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
}

.profile_avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.profile_id {
  font-size: 34rpx;
  color: #2d2d2d;
  padding: 14rpx;
}

.profile_box {
  width: 100%;
  padding-left: 24rpx;
  flex-direction: column;
}

.profile_list {
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 105rpx;
  padding-right: 24rpx;
  border-bottom: 1px solid #ebebeb;
  font-size: 32rpx;
  color: #2d2d2d;
}

.profile_info {
  justify-content: flex-end;
  align-items: center;
}

.profile_arrow {
  width: 15rpx;
  height: 27rpx;
  margin-left: 20rpx;
}

/* 修改昵称 */

.edit_nick {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 640rpx;
  height: 480rpx;
  margin-left: -320rpx;
  margin-top: -240rpx;
  padding: 0 40rpx;
  background-color: #fff;
  border-radius: 16rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transform: translateY(0);
  transition: 1s;
}

.edit_input {
  border: 1px solid #ddd;
  border-radius: 8rpx;
   width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
}
.edit_tips{
  width: 100%;
  font-size: 24rpx;
  color: #666666;
  padding: 20rpx 0;
}
.edit_btn {
  margin-top: 50rpx;
   width: 100%;
  height: 88rpx;
  background: #ff4686;
  border-radius: 88rpx;
  font-size: 32rpx;
  color: #fff;
  justify-content: center;
  align-items: center;
}

.ico_close {
  position: absolute;
  bottom: -100rpx;
  left: 50%;
  width: 72rpx;
  height: 72rpx;
  margin-left: -36rpx;
}
/* 修改性别 */
.edit_sex{
  position: absolute;
  bottom: 0;
  width: 100%; 
  padding: 24rpx; 
  flex-direction: column;
}
.sex_option{
  width: 100%;
  height: 98rpx;
  justify-content: center;
  align-items: center;
  background: #FFFFFF;
  border-radius: 8rpx;
  margin-bottom: 2rpx;
  font-size: 36rpx;
  color: #FF2570;
}
.sex_option:first-child{ 
  color: #2572FF;
}
.sex_option:last-child{
  margin-top: 20rpx;
  color: #2D2D2D;
}
/*底部弹窗动画*/
.slider_up {
  animation: sliderUp 0.5s ease-out;
}

@keyframes sliderUp {
  0% {
    transform: translateY(100%);
  }

  100% {
    transform: translateY(0);
  }
}
