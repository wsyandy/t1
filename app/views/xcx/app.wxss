/**app.wxss**/

/**公共样式**/

page {
  background-color: #f2f3f7;
}

view, scroll-view, text, navigator, picker, input, button, image {
  display: flex;
  box-sizing: border-box;
}

/**左侧个人中心弹出层样式 start**/
.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.50);
}

.user_info_box {
  position: absolute;
  left: 0;
  top: 0;
  width: 600rpx;
  height: 100%;
  background-color: #fff;
  flex-direction: column;
  transform: translateX(0);
  transition: transform 0.3s;
}

.info_head {
  position: relative;
  width: 100%;
  height: 300rpx;
  flex-direction: column;
  overflow: hidden;
}

.info_bg {
  width: 100%;
  height: 350rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.comeback {
  position: relative;
  padding: 30rpx;
  align-items: center;
}

.comeback_icon {
  width: 38rpx;
  height: 32rpx;
}

.comeback_text {
  padding: 0 10rpx;
  font-size: 34rpx;
  color: #2d2d2d;
}

.user_info {
  position: relative;
  width: 100%;
  padding: 20rpx 50rpx;
  align-items: center;
}

.user_avatar {
  width: 86rpx;
  height: 86rpx;
  border: 1px solid #ff206d;
  border-radius: 50%;
  margin-right: 24rpx;
}

.info_detail {
  flex-direction: column;
}

.info_nickname {
  font-size: 36rpx;
  color: #000;
  padding-bottom: 10rpx;
  align-items: center;
}

.info_edit {
  width: 56rpx;
  height: 56rpx;
  margin-left: 10rpx;
}

.info_id {
  font-size: 28rpx;
  color: #686868;
}

.info_list {
  width: 100%;
  height: 92rpx;
  padding: 0 50rpx;
  align-items: center;
  font-size: 32rpx;
  color: #2d2d2d;
}
.info_list:hover{
  background-color: #F6F6F6
}

.info_icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 30rpx;
}

.slider_left {
  animation: sliderLeft 0.3s linear;
}

.slider_right {
  transform: translateX(-100%);
  animation: sliderRight 0.3s linear;
}

@keyframes sliderLeft {
  0% {
    transform: translateX(-100%);
  }

  100% {
    transform: translateX(0);
  }
}

@keyframes sliderRight {
  0% {
    transform: translateX(0);
  }

  100% {
    transform: translateX(-100%);
  }
}
/**左侧个人中心弹出层样式 end**/